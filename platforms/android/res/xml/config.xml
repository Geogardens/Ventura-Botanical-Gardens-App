    <icon density="mdpi" src="res/android/vbg_48.png" />
    <icon density="hdpi" src="res/android/vbg_72.png" />
    <icon density="xhdpi" src="res/android/vbg_96.png" />
    <name>VBG</name>
    <description>
        Ventura Botanical Gardens tour app
    </description>
